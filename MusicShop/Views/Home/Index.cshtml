@{
    ViewBag.Title = "Home Page";
}



<style>
    .mySlides {
        display: none;
    }
</style>



<div class="slideshow">
    <img class="mySlides" src="~/Content/Images/slideshow_guitar.jpg" style="width:100%">
    <img class="mySlides" src="~/Content/Images/slideshow_epiphone.jpg" style="width:100%">
    <img class="mySlides" src="~/Content/Images/slideshow_amp.jpg" style="width:100%">
    <img class="mySlides" src="~/Content/Images/slideshow_guitar.jpg" style="width:100%">

    <button class="prev" onclick="plusDivs(-1)">&#10094;</button>
    <button class="next" onclick="plusDivs(1)">&#10095;</button>
</div>

<script>
    var slideIndex = 1;
    showDivs(slideIndex);

    function plusDivs(n) {
        showDivs(slideIndex += n);
    }

    function showDivs(n) {
        var i;
        var x = document.getElementsByClassName("mySlides");
        if (n > x.length) { slideIndex = 1 }
        if (n < 1) { slideIndex = x.length }
        for (i = 0; i < x.length; i++) {
            x[i].style.display = "none";
        }
        x[slideIndex - 1].style.display = "block";
    }
</script>






