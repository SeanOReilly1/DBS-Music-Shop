@model MusicShop.Models.Guitar

@{
    ViewBag.Title = "Edit";
}


@if (Session["userType"] != null && Session["userType"].ToString() == "staff")
{
    <h2>Edit</h2>

    if (Model == null)
    {
        <h3>No item exists with those credentials</h3>
    }
    else
    {
        <div id="frmSubmitToBackend">
            <h3> Details to be Edited in Database</h3>
            @using (Html.BeginForm("Edit", "Guitar", FormMethod.Post, new { id = "frmEditItem" }))
            {
              
                @Html.LabelFor(g => g.ID)
                @Html.TextBoxFor(g => g.ID, new { id = "txtId", @readonly = "readonly" })
                <p>
               
                    @Html.LabelFor(g => g.Name)
                    @Html.TextBoxFor(g => g.Name, new { id = "txtName" })
                </p>
                <p>
                    
                    @Html.LabelFor(g => g.Image)
                    @Html.TextBoxFor(g => g.Image, new { id = "txtImage" })
                </p>
                <p>
                
                    @Html.LabelFor(g => g.Price)
                    @Html.TextBoxFor(g => g.Price, new { id = "txtPrice", type = "number", step = "0.01" })
                </p>
                <p>
                    <!--Stock-->
                    @Html.LabelFor(g => g.Stock)
                    @Html.TextBoxFor(g => g.Stock, new { id = "txtStock", type = "number" })
                </p>

                <p>
                
                    @Html.LabelFor(m => m.ItemType)
                    Guitar: @Html.RadioButton("ItemType", "Guitar")
                    Amp: @Html.RadioButton("ItemType", "Amp")
                </p>

                <p>
                  
                    @Html.LabelFor(m => m.Brand)
                    Fender: @Html.RadioButton("Brand", "Fender")
                    Gibson: @Html.RadioButton("Brand", "Gibson")
                    Squire: @Html.RadioButton("Brand", "Squire")
                </p>

                <p>
                    <input id="Submit1" type="submit" value="submit" onclick="return confirm('Are you sure you want to edit this record?')" />
                    <input id="Reset1" type="reset" value="reset" />
                </p>
            }
        </div>
    }
}
else
{
    <h2>You do not have access to this page</h2>
}


